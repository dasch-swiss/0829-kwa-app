###############################################
## TEXTMANIFEST
##############
## 
## The text manifest is a physical realization of a
## sequence of textexpressions on a sequence of textcarriers
##
## Properties of TEXTMANIFEST

:hasKwaManifestId rdf:type owl:ObjectProperty ;
          rdfs:subPropertyOf  :hasShortCode, dcterms:identifier ;
          rdfs:label "KWA Textmanifest-Id"@de ,
                     "Kwa Textmanifest id"@en ;
          rdfs:comment "An id of the textexpression in the context of the kwa. Corresponds to the texts database id (if any) plus some magic numbers" ;
          knora-base:subjectClassConstraint :Textmanifest;
          knora-base:objectClassConstraint knora-base:TextValue ;
          salsah-gui:guiElement salsah-gui:SimpleText ;
          salsah-gui:guiAttribute "size=128" ,
                                  "maxlength=128" .
                                                 
##############
## Class TEXTMANIFEST       
## 

:Textmanifest rdf:type owl:Class ;
              rdfs:subClassOf :TextResource   ,				
				 [
					rdf:type owl:Restriction;
					owl:onProperty :hasTitle;
					owl:cardinality "1"^^xsd:nonNegativeInteger] ,	
				[
					rdf:type owl:Restriction;
					owl:onProperty :hasKwaManifestId;
					owl:cardinality "1"^^xsd:nonNegativeInteger] ,					
				[
					rdf:type owl:Restriction;
					owl:onProperty :textresource-fulltext;
					owl:cardinality "1"^^xsd:nonNegativeInteger], 									 
				 [
					rdf:type owl:Restriction;
					owl:onProperty :hasKWAVolume;
					owl:maxCardinality "1"^^xsd:nonNegativeInteger] ,
				 [
					rdf:type owl:Restriction;
					owl:onProperty :hasKWAPageNo;
					owl:maxCardinality "1"^^xsd:nonNegativeInteger] ;
					
              rdfs:comment "A single manifestation of a text (on a textcarrier or a set of textcarriers). Corresponds to a transcription and bears the fulltext. Can be realized on more than one textcarriers in case of the mikrogramme. The relation to the textcarrier is created by standoff tags on the fulltext marking the columns on pages on the textcarrier." ;
              rdfs:label "Textmanifest"@de ,
              "text manifest"@en .               
              
              
